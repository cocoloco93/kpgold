<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/colorslpash"
    android:orientation="vertical"
    tools:context=".LoginActivity">



    <EditText
        android:id="@+id/ed_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_outline_rectangle"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="16dp"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:textColorHint="#AD131313" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ed_password"
        android:hint="Password"
        android:padding="12dp"
        android:textColorHint="#AD000000"
        android:layout_marginTop="15dp"
        android:inputType="textPassword"
        android:textColor="@color/colorslblack"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="16dp"
        android:background="@drawable/bg_outline_rectangle"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ed_com_password"
        android:hint="Comfirm Password"
        android:padding="12dp"
        android:textColorHint="#AD000000"
        android:layout_marginTop="15dp"
        android:inputType="textPassword"
        android:textColor="@color/colorslblack"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="16dp"
        android:background="@drawable/bg_outline_rectangle"/>


    <Button
        android:id="@+id/bt_sign_up"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#262626"
        android:text="Sign Up"
        android:textColor="@color/colorslpash" />

</LinearLayout>